{
  "name": "copyright-compendium-viewer",
  "version": "1.3.2",
  "dependencies": {
    "@algolia/autocomplete-js": "^1.19.0",
    "@algolia/autocomplete-theme-classic": "^1.19.0",
    "@remotion/cli": "^4.0.422",
    "@remotion/player": "^4.0.422",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "algoliasearch": "^5.23.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "remotion": "^4.0.422"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^25.2.3",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.6.1",
    "jsdom": "^28.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "vite": "^6.3.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "release": "standard-version"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        10000
      ]
    }
  },
  "standard-version": {
    "infile": "docs/CHANGELOG.md",
    "scripts": {
      "postbump": "git add package.json package-lock.json docs/CHANGELOG.md"
    }
  }
}
