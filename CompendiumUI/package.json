{
  "name": "copyright-compendium-viewer",
  "version": "1.5.1",
  "dependencies": {
    "@algolia/autocomplete-js": "^1.19.0",
    "@algolia/autocomplete-theme-classic": "^1.19.0",
    "algoliasearch": "^5.23.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@remotion/cli": "^4.0.422",
    "@remotion/player": "^4.0.422",
    "@types/node": "^25.2.3",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.6.1",
    "jsdom": "^28.1.0",
    "remotion": "^4.0.422",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "vite": "^6.3.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "release": "standard-version",
    "video:preview": "remotion preview CompendiumUI/remotion/index.ts",
    "video:render": "remotion render CompendiumUI/remotion/index.ts DemoVideo out/demo.mp4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        10000
      ]
    }
  },
  "standard-version": {
    "infile": "docs/CHANGELOG.md",
    "scripts": {
      "postbump": "git add package.json package-lock.json docs/CHANGELOG.md"
    }
  }
}
